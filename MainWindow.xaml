<Window x:Class="CurrencyConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="160" Width="318">
    <Grid>
        <Label x:Name="label" Content="Currency Converter" HorizontalAlignment="Left" Margin="0,-7,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.52,0.478" Height="60" Width="305" FontSize="36" FontFamily="Dubai Medium" FontStyle="Normal"/>
        <ComboBox x:Name="cmboxMonnaie1" HorizontalAlignment="Left" Margin="87,53,0,0" VerticalAlignment="Top" Width="72"/>
        <ComboBox x:Name="cmboxMonnaie2" HorizontalAlignment="Left" Margin="87,87,0,0" VerticalAlignment="Top" Width="72"/>
        <Button x:Name="btnConvertir" Content="Convertir" HorizontalAlignment="Left" Margin="180,53,0,0" VerticalAlignment="Top" Width="104" Height="21" RenderTransformOrigin="-0.14,0.285"/>
        <TextBox x:Name="txtMonnaie1" HorizontalAlignment="Left" Margin="10,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" Height="22"/>
        <TextBox x:Name="txtMonnaie2" HorizontalAlignment="Left" Margin="10,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" Height="22"/>

    </Grid>
</Window>
